<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#95F6EE">
    <TextView
        android:text="Sửa thông tin công viêc"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#ff00"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/dialog_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textSize="20sp"
        android:hint="Nhập tên công việc..."
        android:layout_below="@id/dialog_edit_txt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/dialog_edit_etxt"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Ok"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"
        android:layout_below="@id/dialog_edit_etxt"
        android:id="@+id/dialog_edit_btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="No"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_below="@id/dialog_edit_etxt"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/dialog_edit_btnOk"
        android:id="@+id/dialog_edit_btnNo"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>