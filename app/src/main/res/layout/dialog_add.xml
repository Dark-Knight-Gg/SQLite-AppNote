<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#1FD0FB"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:text="Thêm công việc"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#ff00"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/dialog_add_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/dialog_add_etxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_add_txt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:hint="Nhập công việc...."
        android:textSize="20sp" />
    <Button
        android:text="Ok"
        android:layout_below="@id/dialog_add_etxt"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:id="@+id/dialog_add_btnOk"
        android:backgroundTint="#F4399A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="No"
        android:textSize="20sp"
        android:layout_below="@id/dialog_add_etxt"
        android:layout_toRightOf="@id/dialog_add_btnOk"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#F4399A"
        android:id="@+id/dialog_add_btnNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>